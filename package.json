{
  "name": "frontend-interview-project",
  "version": "1.0.0",
  "description": "Interview project for Merapar frontend candidates",
  "main": "index.ts",
  "scripts": {
    "build": "npm run build:ts && npm run build:scss",
    "build:ts": "tsc",
    "build:scss": "sass --no-source-map src/styles/index.scss public/styles/index.css",
    "format:check": "prettier --check ./src/**/*.mts",
    "format:write": "prettier --write ./src/**/*.mts",
    "lint:check": "eslint ./src/**/*.mts",
    "lint:fix": "eslint --fix ./src/**/*.mts"
  },
  "keywords": [
    "merapar",
    "interview",
    "frontend"
  ],
  "author": "Merapar",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.39.0",
    "sass": "^1.55.0"
  }
}
